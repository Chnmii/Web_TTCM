@model QLBanCay.Models.DanhMucCay
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThemCayMoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-body" style="min-height: 960px">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, Welcome Back!</h4>
                </div>
            </div>

            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Danh mục cây</a></li>
                    <li class="breadcrumb-item active"><a asp-area="admin" asp-controller="DSCay" asp-action="Danhmuccay">Danh sách cây</a></li>
                    <li class="breadcrumb-item active"><a asp-action="SuaSanPham">Sửa</a></li>
                </ol>
            </div>

            <!-- row -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Sửa</h4>

                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <div id="example_wrapper" class="dataTables_wrapper">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form method="post" asp-action="SuaSanPham">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="MaCay" class="control-label"></label>
                                                    <input asp-for="MaCay" class="form-control" />
                                                    <span asp-validation-for="MaCay" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="TenCay" class="control-label"></label>
                                                    <input asp-for="TenCay" class="form-control" />
                                                    <span asp-validation-for="TenCay" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MaLoai" class="control-label"></label>
                                                    <input asp-for="MaLoai" class="form-control" />
                                                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MoTa" class="control-label"></label>
                                                    <input asp-for="MoTa" class="form-control" />
                                                    <span asp-validation-for="MoTa" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MaNcc" class="control-label"></label>
                                                    <select asp-for="MaNcc" class="form-control" asp-items="ViewBag.MaNcc"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MaNuocSx" class="control-label"></label>
                                                    <select asp-for="MaNuocSx" class="form-control" asp-items="ViewBag.MaNuocSx"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="CachChamSoc" class="control-label"></label>
                                                    <input asp-for="CachChamSoc" class="form-control" />
                                                    <span asp-validation-for="CachChamSoc" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="AnhCay" class="control-label"></label>
                                                    <input asp-for="AnhCay" class="form-control" />
                                                    <span asp-validation-for="AnhCay" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Create" class="btn btn-primary" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <div>
                                        <a asp-action="Danhmuccay">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


