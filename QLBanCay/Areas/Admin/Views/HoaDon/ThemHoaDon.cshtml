@model QLBanCay.Models.HoaDonBan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThemHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-body" style="min-height: 960px">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, Welcome Back!</h4>
                </div>
            </div>

            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Quản lý hoá đơn</a></li>
                    <li class="breadcrumb-item active"><a asp-area="admin" asp-controller="HoaDon" asp-action="DanhsachHD">Danh sách hoá đơn</a></li>
                    <li class="breadcrumb-item active"><a asp-action="ThemHoaDon">Thêm hoá đơn mới</a></li>
                </ol>
            </div>

            <!-- row -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Thêm hoá đơn mới</h4>

                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <div id="example_wrapper" class="dataTables_wrapper">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form method="post" asp-action="ThemHoaDon">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="MaHdb" class="control-label"></label>
                                                    <input asp-for="MaHdb" class="form-control" />
                                                    <span asp-validation-for="MaHdb" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="NgayBan" class="control-label"></label>
                                                    <input asp-for="NgayBan" class="form-control" />
                                                    <span asp-validation-for="NgayBan" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MaKh" class="control-label"></label>
                                                    <select asp-for="MaKh" class ="form-control" asp-items="ViewBag.MaKh"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="MaNv" class="control-label"></label>
                                                    <select asp-for="MaNv" class ="form-control" asp-items="ViewBag.MaNv"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="TongTien" class="control-label"></label>
                                                    <input asp-for="TongTien" class="form-control" />
                                                    <span asp-validation-for="TongTien" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="GhiChu" class="control-label"></label>
                                                    <input asp-for="GhiChu" class="form-control" />
                                                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Create" class="btn btn-primary" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <div>
                                        <a asp-action="DanhsachHD">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

